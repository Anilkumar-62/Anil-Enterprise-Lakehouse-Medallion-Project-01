		{
			"name": "[concat(parameters('factoryName'), '/Ls_anil_Azure_Data_Lake_Storage_Gen2')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('Ls_anil_Azure_Data_Lake_Storage_Gen2_properties_typeProperties_url')]",
					"accountKey": {
						"type": "SecureString",
						"value": "[parameters('Ls_anil_Azure_Data_Lake_Storage_Gen2_accountKey')]"
					}
				}
			},
			"dependsOn": []
